//- layout.pug
doctype html
html(lang=en)
    head
        block metatags
            meta(charset='UTF-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge')
            meta(name='viewport', content='width=device-width, initial-scale=1')
        title= title || 'My Portfolio - ZoÃ« Clarno'
        block logos
            link(rel='apple-touch-icon', sizes='180x180', href='/images/favicon/apple-touch-icon.png')
            link(rel='icon', type='image/png', sizes='32x32', href='/images/favicon/favicon-32x32.png')
            link(rel='icon', type='image/png', sizes='16x16', href='/images/favicon/favicon-16x16.png')
            link(rel='manifest', href='/images/favicon/manifest.json')
            link(rel='mask-icon', href='/images/favicon/safari-pinned-tab.svg', color='#5bbad5')
            link(rel='shortcut icon', href='/images/favicon/favicon.ico')
            meta(name='msapplication-config', content='/images/favicon/browserconfig.xml')
            meta(name='theme-color', content='#ffffff')
        block styles
            link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
            link(href='https://fonts.googleapis.com/css?family=Limelight', rel='stylesheet', type='text/css')
            link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,400italic', rel='stylesheet', type='text/css')
            link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
            link(href='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css', rel='stylesheet', type='text/css')
            link(href='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css', rel='stylesheet', type='text/css')
            link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
            link(rel='stylesheet', type='text/css', href='/stylesheets/css/styles.css')
        block scripts
            script(src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous")
            script(src='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js')
            script(src='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js')
            script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

    - var bodyClasses = [];
    block preBody
        //- preBody will be used to push classes onto bodyClasses
    body(data-spy='scroll', data-target="#header", class=bodyClasses)
        block header
        block content
        block footer
        block footerscripts
